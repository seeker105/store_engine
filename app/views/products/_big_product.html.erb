<div class="product_pic" style="float: left;">
  <%= image_tag product.image.url(:x_large) if product.image.exists? %>
</div>
<div>
  <h2 class="big_product_title" ><%= product.name %></h2>
  <%= amount_in_dollars(product.price) %>
  <%= button_to 'Add to Cart', line_items_path(:product_id => product) %>
  <%= product.description %>
  
</div>
