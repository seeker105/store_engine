<div class="well well-large">
  <h1>Login to OregonSale!</h1>
  <p>Not signed up? Register <%= link_to "here", signup_path %></p>
  <%= form_tag session_path do %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="field">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %><%= label_tag :remember_me %>
    </div>
    <div class="actions"><%= submit_tag "Log in", :class => "btn btn-success" %></div>
  <% end %>
</div>
